  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:a11y": "jest --testMatch='**/*.a11y.test.{ts,tsx}'",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "analyze": "ANALYZE=true next build",
    "clean": "rm -rf .next && rm -rf node_modules/.cache",
    "fix-dirs": "mkdir -p app app/api && cp -n src/app/layout.tsx app/layout.js 2>/dev/null || true && cp -n src/app/page.tsx app/page.js 2>/dev/null || true",
    "fix": "node scripts/fix-common-issues.js",
    "prepare": "husky"
  },
  "keywords": [
    "image",
    "editing",
    "effects",
    "filters",
    "react"
  ],
